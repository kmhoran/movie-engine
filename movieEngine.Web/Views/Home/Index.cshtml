@model movieEngine.Web.Models.HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}
@section styles{
    <style>
        .body-text--padded{
        margin: 5px 10px;
    }
    .movie{
        text-align: center;
        margin: 0.5em 0;
        padding: 0.5em 0;
        border-radius: 5px;
    }
    .movie:hover{
        cursor: pointer;
        background-color: #eFe;
    }
    .movie-detail{
        width: 100%;
    }
    .movie-image{
        width: 10em;
    }
    .movie-buttons{
        margin: auto;
        text-align: center;
    }
    .movie-buttons--inline{
        display: inline;
        margin-top: 0.5em;
    }
    </style>
}

<h1 class="body-text--padded">Movies</h1>
<hr/>
<div class="row body-text--padded">
    @foreach(var movie in Model.Movies)
    {
        <div class="col-md-4 movie">
            <div class="row movie-detail">
                <h3>@movie.Title</h3>
                <p>@movie.Year</p>
                <img class="movie-image" 
                     src="@movie.ImagePath"
                     alt="@movie.Title"/>
            </div>
            <div class="row movie-buttons">
                <a href="@movie.TicketUrl">
                    <button class="movie-buttons--inline">Buy Tickets</button>
                </a>
            </div>
        </div>
    }
</div>
<!-- /.row -->
